<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ContactActivity">
 <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@color/black"
         android:orientation="vertical"
         android:scrollbars="vertical"
         android:scrollIndicators="right"
         >

         <TextView
             android:id="@+id/contactheadline"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:padding="5sp"
             android:text="@string/contact"
             android:textColor="@color/white"
             android:textSize="40sp"></TextView>

         <TextView
             android:id="@+id/contactinfo"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/contactheadline"
             android:layout_marginTop="20dp"
             android:padding="15dp"
             android:text="@string/contact"
             android:textColor="@color/white"
             android:textSize="15dp"></TextView>

         <TextView
             android:id="@+id/headingtext"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/contactinfo"
             android:layout_marginTop="10dp"
             android:gravity="center_horizontal"
             android:padding="10dp"
             android:text="@string/emailus"
             android:textAppearance="@style/TextAppearance.AppCompat.Large"
             android:textColor="@color/white"
             android:textSize="25dp" />
         <TextView
             android:id="@+id/subjecttext"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/headingtext"
             android:padding="10dp"
             android:text="@string/subject"
             android:textAppearance="@style/TextAppearance.AppCompat.Large"
             android:textColor="@color/white"
             android:textSize="20dp" />

         <EditText
             android:id="@+id/edit_text_subject"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/subjecttext"
             android:layout_gravity="center_horizontal"
             android:layout_marginHorizontal="15dp"
             android:layout_marginVertical="10dp"
             android:background="@drawable/rounded_edittext"
             android:hint="@string/entersubject"
             android:inputType="textEmailSubject"
             android:lines="2"
             android:padding="10dp"
             android:textAlignment="center"
             android:textColor="@color/white"
             android:textColorHint="@color/lightgrey" />

         <TextView
             android:id="@+id/messagetext"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/edit_text_subject"
             android:padding="10dp"
             android:text="@string/message"
             android:textAppearance="@style/TextAppearance.AppCompat.Large"
             android:textColor="@color/white"
             android:textSize="20dp" />

         <EditText
             android:id="@+id/edit_text_message"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/messagetext"
             android:layout_gravity="center_horizontal"
             android:layout_marginHorizontal="15dp"
             android:layout_marginVertical="10dp"
             android:background="@drawable/rounded_edittext"
             android:gravity="center_horizontal"
             android:hint="@string/entermessage"
             android:padding="10dp"
             android:textAlignment="center"
             android:textColor="@color/white"
             android:textColorHint="@color/lightgrey" />

         <Button
             android:id="@+id/sendbutton"
             android:layout_width="177dp"
             android:layout_height="wrap_content"
             android:layout_below="@+id/edit_text_message"
             android:layout_gravity="center_horizontal"
             android:layout_margin="40dp"
             android:background="@drawable/rounded_button2"
             android:gravity="center"
             android:padding="10dp"
             android:text="@string/send"
             android:textSize="15dp" />
     </LinearLayout>
 </ScrollView>
</LinearLayout>