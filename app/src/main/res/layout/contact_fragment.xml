<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".ContactActivity">
 <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/grey">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingBottom="20dp"
         android:orientation="vertical">
         <TextView
             android:background="@color/black"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:fontFamily="@font/share_tech_mono"
             android:paddingTop="20dp"
             android:paddingLeft="20dp"
             android:text="Contact us"
             android:textColor="@color/white"
             android:textSize="40dp"
             android:textStyle="bold" />
         <TextView
             android:id="@+id/textView10"
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:layout_gravity="center_horizontal"
             android:fontFamily="@font/share_tech_mono"
             android:background="@drawable/ic_wave2"
             android:text=" " />
         <com.google.android.material.card.MaterialCardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginHorizontal="20dp"
             android:layout_marginVertical="10dp"
             android:layout_centerHorizontal="true"
             app:cardCornerRadius="20dp"
             app:strokeColor="@color/white"
             app:strokeWidth="2dp"
             app:cardBackgroundColor="@color/white">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="@color/grey"
             android:gravity="center">
            <TextView
                android:id="@+id/contactinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:text="@string/contact"
                android:textColor="@color/white"
                android:textSize="15dp"/>
         </LinearLayout>
         </com.google.android.material.card.MaterialCardView>

         <TextView
             android:id="@+id/headingtext"
             android:layout_width="match_parent"
             android:layout_marginHorizontal="20dp"
             android:layout_height="wrap_content"
             android:layout_below="@id/contactinfo"
             android:layout_marginTop="10dp"
             android:gravity="center_horizontal"
             android:padding="10dp"
             android:text="@string/emailcsi"
             android:background="@drawable/spash_box"
             android:fontFamily="@font/montserrat_regular"
             android:textAppearance="@style/TextAppearance.AppCompat.Large"
             android:textColor="@color/white"
             android:textSize="25dp" />
         <TextView
             android:id="@+id/subjecttext"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/headingtext"
             android:padding="10dp"
             android:text="@string/subject"
             android:textAppearance="@style/TextAppearance.AppCompat.Large"
             android:textColor="@color/white"
             android:textSize="20dp" />

         <EditText
             android:id="@+id/edit_text_subject"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/subjecttext"
             android:layout_gravity="center_horizontal"
             android:layout_marginHorizontal="15dp"
             android:layout_marginVertical="10dp"
             android:background="@drawable/rounded_edittext"
             android:hint="@string/entersubject"
             android:inputType="textEmailSubject"
             android:lines="2"
             android:padding="10dp"
             android:textAlignment="center"
             android:textColor="@color/white"
             android:textColorHint="@color/lightgrey" />

         <TextView
             android:id="@+id/messagetext"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/edit_text_subject"
             android:padding="10dp"
             android:text="@string/message"
             android:textAppearance="@style/TextAppearance.AppCompat.Large"
             android:textColor="@color/white"
             android:textSize="20dp" />

         <EditText
             android:id="@+id/edit_text_message"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/messagetext"
             android:layout_gravity="center_horizontal"
             android:layout_marginHorizontal="15dp"
             android:layout_marginVertical="10dp"
             android:background="@drawable/rounded_edittext"
             android:gravity="center_horizontal"
             android:hint="@string/entermessage"
             android:padding="10dp"
             android:textAlignment="center"
             android:textColor="@color/white"
             android:textColorHint="@color/lightgrey" />

         <Button
             android:id="@+id/sendbutton"
             android:layout_width="177dp"
             android:layout_height="wrap_content"
             android:layout_below="@+id/edit_text_message"
             android:layout_gravity="center_horizontal"
             android:layout_margin="40dp"
             android:background="@drawable/rounded_button2"
             android:gravity="center"
             android:padding="10dp"
             android:text="@string/send"
             android:textSize="15dp" />
     </LinearLayout>
 </ScrollView>
</LinearLayout>